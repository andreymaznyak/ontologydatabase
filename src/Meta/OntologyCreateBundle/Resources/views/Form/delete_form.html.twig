{% block button_widget %}
{% spaceless %}
    {% if label is empty %}
        {% set label = name|humanize %}
    {% endif %}
    <button type="{{ type|default('button') }}" {{ block('button_attributes') }} class="btn btn-danger"><span class="glyphicon glyphicon glyphicon-remove"></span> Удалить </button>
{% endspaceless %}
{% endblock button_widget %}

