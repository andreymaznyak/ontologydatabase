{% extends '::base.bs.html.twig' %}

{% block title -%}Trigger list{% endblock %}
{% block body_heading -%}<div class="panel-heading">Trigger list</div>{% endblock %}

{% block body -%}
    <table class="records_list table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Typeaction</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('trigger_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.typeAction }}</td>
                <td>
                        <a class="btn btn-default" rel="tooltip" title="show" href="{{ path('trigger_show', { 'id': entity.id }) }}">show</a>
                        <a class="btn btn-default" rel="tooltip" title="edit" href="{{ path('trigger_edit', { 'id': entity.id }) }}">edit</a>                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block body_footer -%}
	<div class="panel-footer">
		<a class="btn btn-default" rel="tooltip" title="Create a new entry" href="{{ path('trigger_new') }}">Create a new entry</a>
	</div>
{% endblock %}
